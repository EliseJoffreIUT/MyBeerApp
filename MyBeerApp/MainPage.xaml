<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyBeerApp.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <StackLayout>
        <!--  Titre et Bouton ajout à la liste  -->
        <StackLayout Margin="15,15,15,5" Orientation="Horizontal">
            <Label
                FontAttributes="Bold"
                FontSize="Title"
                Text="Liste de bières"
                TextColor="#ec9d00"
                VerticalOptions="CenterAndExpand" />

            <ImageButton
                HorizontalOptions="EndAndExpand"
                Source="plus.png"
                VerticalOptions="CenterAndExpand"
                WidthRequest="30" />
        </StackLayout>

        <!--  Phrase d'introduction  -->
        <StackLayout Margin="15,0,15,25" Orientation="Horizontal">
            <Label
                FontSize="Body"
                HorizontalOptions="StartAndExpand"
                Text="A compléter sans modération ..."
                TextColor="Gray"
                VerticalOptions="CenterAndExpand" />
            <Image
                Margin="-60,-5,0,0"
                HorizontalOptions="StartAndExpand"
                IsAnimationPlaying="True"
                Source="cheers.gif"
                VerticalOptions="CenterAndExpand"
                WidthRequest="50" />
        </StackLayout>

        <!--  Liste des bières  -->
        <ListView
            x:Name="ListOfBeers"
            Margin="0,0,0,50"
            HasUnevenRows="True"
            ItemTapped="ListOfBeers_ItemTapped"
            ItemsSource="{Binding Beers, Mode=TwoWay}"
            RowHeight="150"
            SelectionMode="Single"
            SeparatorVisibility="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame Margin="15,10,15,10" VerticalOptions="StartAndExpand">
                            <StackLayout
                                Padding="0"
                                HorizontalOptions="StartAndExpand"
                                Orientation="Horizontal"
                                VerticalOptions="StartAndExpand">
                                <Image Source="{Binding Image}" WidthRequest="100" />
                                <StackLayout
                                    Padding="10,5,0,0"
                                    Orientation="Vertical"
                                    VerticalOptions="FillAndExpand">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="22"
                                        HorizontalOptions="StartAndExpand"
                                        Text="{Binding Name, Mode=TwoWay}"
                                        TextColor="DimGray" />
                                    <Label
                                        FontSize="12"
                                        HorizontalOptions="StartAndExpand"
                                        Text="{Binding Description}"
                                        TextColor="DimGray"
                                        VerticalOptions="StartAndExpand" />
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
